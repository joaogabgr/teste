{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "baseUrl": "./",
     "paths": {
      "/*": ["src/*"] // Mapeia / para a pasta src/
    },
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "esModuleInterop": true
  }
}